---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout>
  <h2 class="text-2xl font-bold">Code Formatter</h2>
  <p class="mt-2">Paste your code below to format it:</p>
  <textarea
    class="w-full h-64 p-2 border mt-4"
    placeholder="Paste your code here..."></textarea>
  <button class="mt-4 bg-blue-500 text-white py-2 px-4 rounded">Format</button>
</BaseLayout>
